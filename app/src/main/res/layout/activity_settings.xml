<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SettingsActivity">
    <Button
            android:text="Camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/cameraButton"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.498" android:visibility="invisible" android:onClick="cameraClick"
            app:layout_constraintTop_toBottomOf="@+id/userButton" android:layout_marginTop="28dp"/>
    <Button
            android:text="User"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/userButton" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.498"
            android:visibility="invisible" android:onClick="userClick" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="288dp"/>
    <Button
            android:text="log out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnSignOut" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="84dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>