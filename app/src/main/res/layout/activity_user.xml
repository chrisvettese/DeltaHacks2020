<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UserActivity">

    <TextView
            android:text="No Motion Detected"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/motionTV"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="@+id/redCircle"
            android:layout_marginStart="86dp" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.058"/>
    <ImageView
            android:id="@+id/redCircle"
            android:layout_width="43dp"
            android:layout_height="94dp"
            android:src="@drawable/redcircle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.179"
            app:layout_constraintVertical_bias="0.007"/>
    <ImageView
            android:id="@+id/greenCircle"
            android:layout_width="43dp"
            android:layout_height="99dp"
            android:src="@drawable/greencircle"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="1dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="105dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="42dp" android:layout_marginEnd="43dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.084"
            app:layout_constraintVertical_bias="0.001"/>
    <TextView
            android:text="Last human seen:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/humanTV"
            android:layout_marginTop="55dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="559dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="37dp" android:layout_marginEnd="262dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/redCircle"/>
    <TextView
            android:text="Last movement detected:"
            android:layout_width="175dp"
            android:layout_height="21dp"
            android:id="@+id/mvtTV"
            android:layout_marginTop="24dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/humanTV" app:layout_constraintEnd_toStartOf="@+id/tv6"
            app:layout_constraintHorizontal_bias="0.672" app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tv5"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="559dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="154dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/humanTV"
            app:layout_constraintHorizontal_bias="0.072" app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tv6"
            android:layout_marginTop="23dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="230dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv5" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.001"/>

</androidx.constraintlayout.widget.ConstraintLayout>