<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UserActivity">

    <TextView
            android:text="No Motion Detected"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/motionSensed"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="@+id/redCircleMotion"
            android:layout_marginStart="86dp" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.068"/>
    <ImageView
            android:id="@+id/redCircleMotion"
            android:layout_width="43dp"
            android:layout_height="94dp"
            android:src="@drawable/redcircle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.179"
            app:layout_constraintVertical_bias="0.007" android:visibility="invisible"/>
    <ImageView
            android:id="@+id/greenCircleMotion"
            android:layout_width="43dp"
            android:layout_height="99dp"
            android:src="@drawable/greencircle"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="1dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="105dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="42dp" android:layout_marginEnd="43dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.084"
            app:layout_constraintVertical_bias="0.001"/>
    <TextView
            android:text="Last movement detected: 0 seconds ago"
            android:layout_width="322dp"
            android:layout_height="20dp"
            android:id="@+id/motionTime"
            android:layout_marginTop="24dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/humanTV"
            app:layout_constraintVertical_bias="0.046" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginStart="37dp"
            android:layout_marginEnd="262dp"/>
    <TextView
            android:text="Last human seen: 0 seconds ago"
            android:layout_width="322dp"
            android:layout_height="20dp" android:id="@+id/humanTV"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="37dp" android:layout_marginEnd="262dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="252dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.193"/>
    <TextView
            android:text="No Humans Detected"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/humansSensed"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="@+id/redCircleMotion"
            android:layout_marginStart="86dp" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.257"/>
    <ImageView
            android:id="@+id/greenCircleHuman"
            android:layout_width="43dp"
            android:layout_height="99dp"
            android:src="@drawable/greencircle"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="1dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="105dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="42dp" android:layout_marginEnd="43dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.084"
            app:layout_constraintVertical_bias="0.254"/>
    <ImageView
            android:id="@+id/redCircleHuman"
            android:layout_width="43dp"
            android:layout_height="94dp"
            android:src="@drawable/redcircle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.179"
            app:layout_constraintVertical_bias="0.216" android:visibility="invisible"/>

</androidx.constraintlayout.widget.ConstraintLayout>